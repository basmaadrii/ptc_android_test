<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_result_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/activity_result_search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_result_cart_iv"
                app:layout_constraintStart_toEndOf="@id/activity_result_back_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/activity_result_cart_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_result_menu_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/activity_result_menu_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_overflow_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/activity_result_filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_filter"
        android:padding="10dp"
        android:text="@string/filter"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/activity_result_filter_vertical_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_result_toolbar" />

    <View
        android:id="@+id/activity_result_filter_vertical_view"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@id/activity_result_filter_tv"
        app:layout_constraintEnd_toStartOf="@id/activity_result_sort_tv"
        app:layout_constraintStart_toEndOf="@id/activity_result_filter_tv"
        app:layout_constraintTop_toTopOf="@id/activity_result_filter_tv" />


    <TextView
        android:id="@+id/activity_result_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_sort"
        android:padding="10dp"
        android:text="@string/popularity"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/activity_result_filter_vertical_view"
        app:layout_constraintEnd_toStartOf="@id/activity_result_sort_vertical_view"
        app:layout_constraintStart_toEndOf="@id/activity_result_filter_vertical_view"
        app:layout_constraintTop_toTopOf="@id/activity_result_filter_vertical_view" />

    <View
        android:id="@+id/activity_result_sort_vertical_view"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@id/activity_result_sort_tv"
        app:layout_constraintEnd_toStartOf="@id/activity_result_grid_iv"
        app:layout_constraintStart_toEndOf="@id/activity_result_sort_tv"
        app:layout_constraintTop_toTopOf="@id/activity_result_sort_tv" />

    <ImageView
        android:id="@+id/activity_result_grid_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_grid"
        app:layout_constraintBottom_toBottomOf="@id/activity_result_sort_vertical_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_result_sort_vertical_view"
        app:layout_constraintTop_toTopOf="@id/activity_result_sort_vertical_view" />

    <View
        android:id="@+id/activity_result_horizontal_view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_result_filter_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_result_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_result_horizontal_view" />

</androidx.constraintlayout.widget.ConstraintLayout>